<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:CustomControl="clr-namespace:Common.View.CustomControl;assembly=Common.View"
             xmlns:app="clr-namespace:Common.View;assembly=Common.View"
             x:Class="Common.View.BaseContentPage"
             BackgroundColor ="{x:Static app:BaseApp.PAGE_BACKGROUND_COLOR}">
  <StackLayout VerticalOptions="FillAndExpand">
    <!--Activity indicator-->    
    <ActivityIndicator x:Name="activity" IsRunning="{Binding IsBusy}" IsEnabled="true"/>    
    <!--Details -->
    <StackLayout x:Name="details" Padding="{StaticResource ListPadding}" Spacing="0"  VerticalOptions="FillAndExpand">
    </StackLayout>
  </StackLayout>
</ContentPage>